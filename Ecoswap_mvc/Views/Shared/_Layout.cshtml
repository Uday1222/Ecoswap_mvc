<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcoSwap</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcoSwap.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        html, body {
            height: 100%;
        }
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        main[role="main"] {
            flex: 1 0 auto;
        }
        footer.footer {
            flex-shrink: 0;
            width: 100%;
            background: var(--card-bg, #222);
            color: var(--text-color, #e0e0e0);
            border-top: 1px solid #444;
            padding: 0.5rem 0;
            font-size: 0.95rem;
            position: relative;
            bottom: 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa fa-leaf me-2 text-success"></i>EcoSwap
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active fw-bold" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fa fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Item" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active fw-bold" : "")" asp-area="" asp-controller="Item" asp-action="Index">
                                <i class="fa fa-list me-1"></i>All Items
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Item" && ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "active fw-bold" : "")" asp-area="" asp-controller="Item" asp-action="Create">
                                <i class="fa fa-plus-circle me-1"></i>Post an Item
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active fw-bold" : "")" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fa fa-shield-alt me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-user-circle me-1"></i>Welcome, @Context.Session.GetString("FullName")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="fa fa-sign-out-alt me-1"></i>Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login"><i class="fa fa-sign-in-alt me-1"></i>Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register"><i class="fa fa-user-plus me-1"></i>Register</a>
                            </li>
                        }
                    </ul>
                    <button id="themeToggle" class="btn btn-outline-success ms-2 rounded-pill px-3" type="button" title="Toggle light/dark mode">
                        <span id="themeIcon" class="fa fa-moon"></span>
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <div id="pageBackButton"></div>
    <main role="main" class="pb-3">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EcoSwap - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.js"></script>
    <script>
    // Theme toggle logic
    const themeToggle = document.getElementById('themeToggle');
    const themeIcon = document.getElementById('themeIcon');
    function setTheme(dark) {
        if (dark) {
            document.body.classList.add('dark-theme');
            themeIcon.className = 'fa fa-sun';
        } else {
            document.body.classList.remove('dark-theme');
            themeIcon.className = 'fa fa-moon';
        }
    }
    function getThemePref() {
        return localStorage.getItem('theme') === 'dark';
    }
    function setThemePref(dark) {
        localStorage.setItem('theme', dark ? 'dark' : 'light');
    }
    if (themeToggle) {
        themeToggle.addEventListener('click', function() {
            const dark = !document.body.classList.contains('dark-theme');
            setTheme(dark);
            setThemePref(dark);
        });
        // On load
        setTheme(getThemePref());
    }
    // Remove chat notification logic
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
