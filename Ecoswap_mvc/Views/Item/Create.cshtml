@{
    ViewData["Title"] = "Post an Item";
}

<h2 class="mb-4">Post an Item</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm" style="max-width: 500px; margin:auto;">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" required />
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input type="file" class="form-control" id="image" name="image" accept="image/*" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Type</label>
        <div>
            <input type="radio" id="giveaway" name="isGiveaway" value="true" checked onchange="togglePrice()" />
            <label for="giveaway" class="me-3">Give Away</label>
            <input type="radio" id="forprice" name="isGiveaway" value="false" onchange="togglePrice()" />
            <label for="forprice">For Price</label>
        </div>
    </div>
    <div class="mb-3" id="priceDiv" style="display:none;">
        <label for="price" class="form-label">Price (â‚¹)</label>
        <input type="number" class="form-control" id="price" name="price" min="1" step="0.01" />
    </div>
    <button type="submit" class="btn btn-success w-100">Post Item</button>
</form>

<script>
function togglePrice() {
    var isGiveaway = document.getElementById('giveaway').checked;
    document.getElementById('priceDiv').style.display = isGiveaway ? 'none' : 'block';
}
document.addEventListener('DOMContentLoaded', togglePrice);
</script> 