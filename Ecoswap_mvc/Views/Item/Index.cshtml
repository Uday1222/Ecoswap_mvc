@model IEnumerable<EcoSwap.Models.Item>
@{
    ViewData["Title"] = "All Items";
}

<div class="container my-5">
    <h2 class="mb-4">All Items</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@item.ImagePath" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text flex-grow-1">@item.Description</p>
                        <div class="mt-auto">
                            @if (item.IsGiveaway)
                            {
                                <span class="badge bg-success mb-2">Free Giveaway</span>
                            }
                            else
                            {
                                <span class="badge bg-primary mb-2">â‚¹@item.Price</span>
                            }
                            <p class="text-muted small mb-2">Posted on @item.DatePosted.ToString("dd MMM yyyy")</p>
                            @if (item.UserId.HasValue)
                            {
                                <p class="text-muted small mb-2">Owner: User #@item.UserId</p>
                            }
                            <a href="@Url.Action("Details", "Item", new { id = item.Id })" class="btn btn-success">View & Chat</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 